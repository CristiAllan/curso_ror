<article class="style<%= rand(1..6) %>">
    <span class="image">

        <% if talk.image_stored? %>
            <%= image_tag talk.image.thumb('320x320#').url %>
        <% else %>
            <img src="<%= gravatar_url(talk.speaker.email) %>?s=320">
        <% end %>
    </span>

        <%= link_to talk_path(id: talk.slug) do %>
            <h2><%= talk.title %></h2>
            <div class="content">
                <p><%= truncate(talk.description, length: 100) %></p>
                <p>Por: <b><%= talk.speaker.name %> </b></p>
            </div>
        <% end %>
</article>